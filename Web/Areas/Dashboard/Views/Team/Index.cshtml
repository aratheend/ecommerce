@model IEnumerable<Team>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <a href="/dashboard/team/create">Create</a>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Position</th>
                        <th>Social</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Position</th>
                        <th>Social</th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var team in Model)
                    {
                        <tr>
                            <td>
                                <img width="50" height="50" src="@team.PhotoUrl" />
                            </td>
                            <td>@team.Name</td>
                            <td>@team.Surname</td>
                            <td>@team.Position.PositionName</td>
                            <td>
                                @foreach (var social in team.TeamSocials)
                                    {
                                        <p>
                                            <span>@social.Social.BaseUrl</span>
                                            <span>@social.UserUrl</span>
                                        </p>
                                    }
                            </td>
                            <td>
                                <a class="btn btn-warning btn-sm" href="/dashboard/team/update/@team.Id">Edit</a>
                                <a class="btn btn-danger btn-sm" href="/dashboard/team/delete/@team.Id">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


