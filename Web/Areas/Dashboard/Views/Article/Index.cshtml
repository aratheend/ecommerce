@model IEnumerable<Article>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <a href="/dashboard/article/create">Create</a>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Photo</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Tags</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Photo</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Tags</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var article in Model)
                    {
                        <tr>
                            <td>
                                <img width="50" height="50" src="@article.PhotoUrl" />
                            </td>
                            <td>@article.Title</td>
                            <td>@article.User.Name  @article.User.Surname </td>
                            <td>
                                @foreach (var tag in article.ArticleTags)
                                {
                                    <span class="badge badge-primary">@tag.Tag.TagName</span>
                                }
                            </td>
                            <td>
                                @if (article.IsDeleted == true)
                                {
                                    <button class="btn btn-danger btn-sm">Deleted</button>
                                }
                                else
                                {
                                    if (article.IsActive == true)
                                    {
                                        <button class="btn btn-success btn-sm">Active</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-warning btn-sm">Deactive</button>
                                    }
                                }
                            </td>
                            <td>
                                <a class="btn btn-warning btn-sm" href="/dashboard/product/update/@article.Id">Edit</a>
                                <a class="btn btn-danger btn-sm" href="/dashboard/product/delete/@article.Id">Remove</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- /.container-fluid -->


