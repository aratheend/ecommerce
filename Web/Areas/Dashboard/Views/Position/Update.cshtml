@model Position

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Update position</h6>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label asp-for="PositionName" class="form-label"></label>
                <input class="form-control" asp-for="PositionName" />
            </div>
            <input class="btn btn-success mt-3" type="submit" value="Update" />
        </form>
    </div>
</div>